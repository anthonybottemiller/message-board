{{yield}}
{{#if addNewAnswer}}
<h2>New Answer</h2>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="content">Answer</label>
        {{input value=content id="content"}}
      </div>
      <button class="btn btn-success" {{action 'saveAnswer'}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-primary" {{action 'answerFormShow'}}>New Answer</button>
{{/if}}