{{yield}}
{{#if addNewQuestion}}
  <h2>Submit a question</h2>
  <div>
    <form>
      <div class="form-group">
        <label for="question">question</label>
        {{input value=question id="question"}}
      </div>
      <div class="form-group">
        <label for="user">User</label>
        {{input value=user id="user"}}
      </div>

      <button {{action 'saveQuestion'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'questionFormShow'}}>New Question</button>
{{/if}}